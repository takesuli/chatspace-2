.sidebar
  %h3.sidebar__user_name
    = current_user.name
    %ul.sidebar__user_name__icons
      %li.list
        = link_to new_group_path do
          = fa_icon 'edit', class: "sidebar__user_name__icons__list--edit" ,method: :GET
          %span<>
      %li.list
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: "sidebar__user_name__icons__list--cog"
          %span<>
  
  .sidebar__groups
    .sidebar__groups__group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .sidebar__groups__group__name
            = group.name
          .sidebar__groups__group__latest_message
            = group.show_last_message

